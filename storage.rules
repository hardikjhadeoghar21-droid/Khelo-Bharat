rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload submission videos to their own folder
    match /submissions/{userId}/{videoId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId; // Or allow officials to read too
    }
  }
}
